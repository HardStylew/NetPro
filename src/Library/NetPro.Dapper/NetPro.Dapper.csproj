<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>$(NetCoreTargetVersion)</TargetFramework>
		<Version>$(NetProDapper)</Version>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Authors>$(Authors)</Authors>
		<Description>
		</Description>
		<PackageProjectUrl>$(PackageProjectUrl)</PackageProjectUrl>
		<PackageIcon>$(PackageIcon)</PackageIcon>
		<AssemblyName>$(NetProDapperAssemblyName)</AssemblyName>
	</PropertyGroup>
	<ItemGroup>
		<None Include="$(PackageIconPath)">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <GenerateSerializationAssemblies>Auto</GenerateSerializationAssemblies>
    <DocumentationFile>bin\Release\netstandard2.0\NetPro.Dapper.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Expressions\DapperExpressionExtensions.cs" />
    <Compile Remove="Expressions\DapperExpressionVisitor.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Dapper" Version="2.0.35" />
    <PackageReference Include="Microsoft.Data.SqlClient" Version="1.1.3" />
    <PackageReference Include="MiniProfiler.Shared" Version="$(MiniProfilerShared)" />
    <PackageReference Include="Pomelo.EntityFrameworkCore.MySql" Version="$(PomeloEntityFrameworkCoreMySql)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\NetPro.Core\NetPro.Core.csproj" />
  </ItemGroup>
  
  <Target Name="CopyPackage" AfterTargets="Pack" Condition="'$(OS)' == 'Windows_NT' and Exists('$(SolutionDir)\PushNuget') and '$(Configuration)' == 'Release'">
    <Copy SourceFiles="$(ProjectDir)\bin\Release\$(PackageId).$(PackageVersion).nupkg" DestinationFolder="$(SolutionDir)\PushNuget" />
  </Target>  
</Project>
