{
	"NetProCorsOption": {
		"CorsOrigins": "*" //允许跨域,不填未开启跨域
	},
	"NetProOption": {
		//"UseResponseCompression": false, //是否启用响应压缩
		//"ThreadMinCount": 5, //最小线程数
		//"ApplicationName": "", //应用名称
		//"RequestWarningThreshold": 5, //请求时长的警告临界值
		"RoutePrefix": "api" //全局路由前缀
	},
	"TypeFinderOption": {
		"MountePath": "C:/data/netpro/"
	},
	"ConnectionStrings": {
		"DefaultConnection": "Server=189.33.22.1;Port=3306;Database=netpro_microservice_demo;charset=utf8mb4;user=root;password=666666;Allow User Variables=True;",
		"MysqlConnection": "Server=189.33.22.1;Port=3306;Database=netpro_microservice_demo;charset=utf8mb4;user=root;password=666666;Allow User Variables=True;",
		"SqliteConnection": "Data Source=../XXX.db"
	},
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft": "Warning",
			"Microsoft.Hosting.Lifetime": "Information"
		}
	},
	"RedisCacheOption": { //Redis配置节点
		"Enabled": true, //是否启用
		"ConnectionString": [
			{
				"Key": "1", //别名为1的连接串，key要唯一
				"Value": "192.168.100.187:6379,password=,defaultDatabase=0,poolsize=10,preheat=20,ssl=false,writeBuffer=10240,prefix=key前辍,testcluster=false,idleTimeout=10" //别名key对应的连接串
			}
		]
	},
	"Serilog": {
		"Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Async", "Serilog.Sinks.File" ],
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"Default": "Error",
				"Microsoft": "Debug",
				"System": "Debug",
				"System.Net.Http.HttpClient": "Debug",
				"Microsoft.Hosting.Lifetime": "Information"
			}
		},
		"WriteTo:Async": {
			"Name": "Async",
			"Args": {
				"configure": [
					{ "Name": "Console" }
				]
			}
		},
		"Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
		"Properties": {
			"Application": "Netpro"
		}
	},

	//**********以上日志***************

	"AllowedHosts": "*",

	"SwaggerOption": {
		"Enabled": true
	},
	"Globalization": {
		"ConnectionString": "Data Source=LocalizationRecords.sqlite", //sqlite地址
		"Cultures": [
			"zh-CN",
			"en-US"
		]
	}
}